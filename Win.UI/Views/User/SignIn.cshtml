@model Win.UI.Models.SignInModel
@{
    ViewBag.Title = "SignIn";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SignIn</h2>
<form method="post">
    <br><br>

    <div class="form-group row">
        <label class="control-label col-sm-1">Email</label>
        <div class="col-sm-4">
            <input class="form-control" type="email" name="Email" placeholder="Email" required/>
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-1">Password</label>
        <div class="col-sm-4">
            <input class="form-control" type="password" name="Password" placeholder="Şifre" required/>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <div class="checkbox">
                <label>
                    <input type="checkbox"> Remember me
                </label>
            </div>
        </div>
    </div>



    <div class="form-group row">
        <div class="col-md-offset-3 col-md-10">
            <button class="btn btn-default" type="submit">Giriş Yap</button>
        </div>
    </div>

   
</form>
    <p>
        @Html.ActionLink("Yeni hesap oluştur", "SignUp")
    </p>
    <p>
        @Html.ActionLink("Şifremi unuttum?", "#")
    </p>



